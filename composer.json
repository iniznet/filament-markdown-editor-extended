{
    "name": "iniznet/filament-markdown-editor-extended",
    "description": "An extended markdown editor for Filament",
    "keywords": [
        "iniznet",
        "laravel",
        "filament-markdown-editor-extended"
    ],
    "homepage": "https://github.com/iniznet/filament-markdown-editor-extended",
    "support": {
        "issues": "https://github.com/iniznet/filament-markdown-editor-extended/issues",
        "source": "https://github.com/iniznet/filament-markdown-editor-extended"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Muhammad Yusuf Fauzan",
            "email": "niznet@jasedi.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "filament/filament": "^4.0",
        "spatie/laravel-package-tools": "^1.15.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.1",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Iniznet\\FilamentMarkdownEditorExtended\\": "src/",
            "Iniznet\\FilamentMarkdownEditorExtended\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Iniznet\\FilamentMarkdownEditorExtended\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Iniznet\\FilamentMarkdownEditorExtended\\MarkdownEditorExtendedServiceProvider"
            ],
            "aliases": {
                "MarkdownEditorExtended": "Iniznet\\FilamentMarkdownEditorExtended\\Facades\\MarkdownEditorExtended"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
